    <title>ChangePassword</title>
</head>

<body ng-app="userPasswordChange" ng-controller="userPasswordChangeCtrl" >
<h2>Data sent to view on page rendering</h2>
<h3><%= name %></h3>

<div >

    <div id="passwordChangeForm">

        <div class="form-group " >
            <label class="control-label" for="pass">Password</label>
            <input type="text" class="form-control position" id="pass" aria-describedby="helpBlock" ng-model="passwordChange.password"
                   data-toggle="tooltip"  title="hello sai"
                    >
        </div>

        <div class="form-group " >
            <label class="control-label " for="confirmPass">ConfirmPassword</label>
            <input type="text" class="form-control position" id="confirmPass" aria-describedby="helpBlock" ng-model="passwordChange.confirmPassword"
                   data-toggle="tooltip"  title="hello sai">
        </div>

        <div class="form-group">
            <button type="button" class="btn btn-primary" id="passwordChangeButton" ng-click="changePassword()">Submit</button>
        </div>
    </div>

    <a href="/register" ng-click="logout()">Logout</a>
    
    <!--<button class="btn btn-default" ng-click="getAll()" href="/details">Show All</button>-->
    <a href="/details" >Show All</a>

    <!--<h3 ng-show="message !== '' ">{{message}}</h3>-->
    <img ng-src="../images/profilePic/{{imagePath}}" alt="hello" width="300" height="300" class="img-thumbnail"/>
    <h1 ng-bind="imagePath"></h1>

           <form>
                <div class="form-group">
                    <button type="file" ngf-select="uploadFiles($file, $invalidFiles)"
                            accept="image/*" ngf-max-height="" ngf-max-size="1MB" name="file">
                        Select File</button>
                    <br><br>
                    File:
                    <h4 ng-bind="f.name"></h4>
                    <h4 ng-bind="errFile.name"></h4>
                    <h4 ng-bind="errFile.$error"></h4>
                    <h4 ng-bind="errFile.$errorParam"></h4>
                    <h4 ng-bind="errorMsg"></h4>

                </div>

            </form>

</div>

